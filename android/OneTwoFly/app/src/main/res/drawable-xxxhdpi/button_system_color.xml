<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!--形状-->
        <shape>
            <!--填充颜色-->
            <solid android:color="@color/system_color_middle"></solid>
            <!--圆角-->
            <corners android:radius="5dp" android:color="#00000000"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <!--形状-->
        <shape>
            <!--填充颜色-->
            <solid android:color="@color/system_color_middle"></solid>
            <!--圆角-->
            <corners android:radius="5dp" android:color="#00000000"/>
        </shape>
    </item>

    <item>
        <!--形状-->
        <shape>
            <!--填充颜色-->
            <solid android:color="@color/system_color"></solid>
            <!--圆角-->
            <corners android:radius="5dp" android:color="#00000000"/>
        </shape>
    </item>
</selector>